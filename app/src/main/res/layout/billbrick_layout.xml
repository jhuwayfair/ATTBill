<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        app:layout_widthPercent="30%"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp"
        tools:text="Name"/>

    <TextView
        app:layout_widthPercent="30%"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:id="@+id/phoneNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp"
        tools:text="PhoneNumber"/>

    <TextView
        android:layout_toRightOf="@+id/name"
        android:layout_toEndOf="@+id/name"
        android:layout_height="wrap_content"
        app:layout_widthPercent="30%"
        android:id="@+id/planValue"
        android:textSize="15dp"
        tools:text="Plan Value"
        android:layout_alignParentTop="true" />


    <EditText
        android:layout_alignLeft="@+id/planValue"
        android:layout_alignStart="@+id/planValue"
        android:layout_alignTop="@+id/phoneNumber"
        android:id="@+id/extraFee"
        android:textSize="15dp"
        android:hint="Extra Fee"
        android:layout_height="wrap_content"
        app:layout_widthPercent="30%"
        tools:text="Extra Fee" />

    <EditText
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/subcharge"
        android:textSize="15dp"
        android:hint="Subchange"
        android:layout_height="wrap_content"
        app:layout_widthPercent="30%"
        tools:text="subcharge" />

    <EditText
        android:layout_below="@+id/subcharge"
        android:id="@+id/taxes"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        app:layout_widthPercent="30%"
        android:textSize="15dp"
        android:hint="ExtraFee"
        tools:text="Extra Fee" />

    <Switch
        android:layout_below="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainOver"/>

    <Switch
        android:layout_toRightOf="@+id/mainOver"
        android:layout_below="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:id="@+id/subOver"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/total"
        android:hint="Total"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_below="@+id/mainOver"/>

</android.support.percent.PercentRelativeLayout>